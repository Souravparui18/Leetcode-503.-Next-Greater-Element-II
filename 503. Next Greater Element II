class Solution {
    public int[] nextGreaterElements(int[] nums) {
        int n = nums.length;
        Stack<Integer>stack = new Stack<>();
        int[] res = new int[n];
        for(int i = 0; i < res.length; i++){
            res[i] = -1;
        }

        for(int i = 0; i < 2 * n; i++){
            int idx = i%n;

            while(!stack.isEmpty() && nums[idx] > nums[stack.peek()]){
                int prev = stack.pop();
                res[prev] = nums[idx];
            }
            if(i < n){
                stack.push(idx);
            }
        }
        return res;


        
    }
}
